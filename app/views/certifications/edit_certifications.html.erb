<h1>User Certificates for: <%= @certification.name %></h1>
<%= form_with url: certification_update_certifications_path(@certification), method: :post, local: true do %>
<table>
  <thead>
   <tr>
     <th>Students</th>
     <th>Grades</th>
   </tr>
  </thead>
  <tbody>
    <% User.students.each do |user|%>
     <tr>
      <td> <%= user.email%> </td>
      <td>
        <%= select_tag("grades[#{user.id}]", options_from_collection_for_select(@possible_grades, "last", "first", @assigned_grades[user.id])) %>
      </td>
     </tr>
     <% end %>
  </tbody>
</table>
<%= submit_tag "Update Grades" %>
<% end %>